@page
@model PersonalDataModel

<div class="card shadow border-0 mb-5">
    <div class="card-header bg-secondary bg-gradient ml-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">Personal Data</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-3">
            <div class="col-md-12">
                <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
                <p>
                    <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                </p>
                <div class="d-flex">
                    <form id="download-data" asp-page="DownloadPersonalData" method="post" class="me-1">
                        <button class="btn btn-primary" type="submit">Download</button>
                    </form>
                    <p class="mb-0">
                        <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger ms-1">Delete</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
